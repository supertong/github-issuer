{
  "manifest_version": 2,
  "name": "My Cool Extension",
  "version": "0.1",
  "permissions": [
    "storage",
    "https://api.github.com/"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["core/content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "templates/popup.html"
  },
  "background": {
    "scripts": ["core/background.js"]
  },
  "options_ui": {
    "page": "templates/options.html",
    "chrome_style": true
  }
}
